---
// Importing your certification partner logos
import rtiLogo from '../assets/rti.png'
import krLogo from '../assets/kr.png';
import sbasLogo from '../assets/sbas.png';
import banner from '../assets/banner.png';
import membershipForm from '../assets/2026MembershipDrive.png';

const themeColor = "#FEDF0A";
---

<div id="container">
    <div id="background-glow"></div>
    
    <main>
        <section id="hero">
            <div id="partners">
                <p class="partners-label">Authorized Examination Center for HVAC-R in Kenya</p>
                <div class="logo-grid">
                    <img src={rtiLogo.src} alt="RTI Certification" />
                    <img src={sbasLogo.src} alt="SBAS Certification" />
                    <img src={krLogo.src} alt="KR Certification" />
                </div>
            </div>

            <h1>Smart <span class="hvac">HVAC-R</span> & Building Automation</h1>
            
            <div id="links">
                <a class="button primary" href={banner.src} download="RTI-HVACR-Brochure.png">RTI SMART HVAC-R PLANT</a>
                
                <div class="membership-section">
                    <a class="button secondary" href="https://www.kenyasmartbuildingsco.org/" target="_blank">Kenya Smart Buildings and Automation Society</a>
                    <a class="membership-info" href={membershipForm.src} download="2026-Membership-Drive.png">
                        <span class="info-icon">ℹ️</span>
                        <span class="info-text">Become a Member today!</span>
                    </a>
                </div>
            </div>

            <div id="info-card" class="box-wide">
                <h2>International HVAC-R certifications exam centre for:</h2>
                <p class="cert-list">TVET CDACC, NITA, ESCO group, Johnson's Controls, BACnet Institute</p>
                <div class="energy-bar">
                    <div class="fill"></div>
                </div>
            </div>
        </section>
    </main>
</div>

<style>
    :root {
        --yellow: #FEDF0A;
        --maroon: #852330;
        --orange: #FD561F;
        --blue: #0D0ADF;
        --black: #020200;
        --white: #ffffff;
        --light-green: #74AC2F;
        --dark-green: #073C16;
    }

    body {
        background-color: var(--maroon);
        color: white;
        margin: 0;
        font-family: sans-serif;
    }

    #background-glow {
        position: fixed;
        top: 0; left: 0; width: 100%; height: 100%;
        background: radial-gradient(circle at top right, var(--dark-green), transparent),
                    radial-gradient(circle at bottom left, var(--maroon), transparent);
        z-index: -1;
        opacity: 0.4;
    }

    #container {
        display: flex;
        min-height: 100vh;
        align-items: center;
        justify-content: flex-start;
        padding: 40px 20px 40px 80px;
    }

    main {
        width: 100%;
        max-width: 900px; /* Increased slightly for the wide box */
    }

    h1 {
        font-size: 3.5rem;
        color: white;
        margin: 0;
        line-height: 1.1;
    }

    .hvac {
        color: var(--white);
        text-shadow: 2px 2px var(--blue);
    }

    #links {
        display: flex;
        flex-direction: column;
        gap: 20px;
        margin-top: 30px;
        align-items: flex-start;
    }

    .button {
        padding: 12px 24px;
        text-decoration: none;
        border-radius: 4px;
        font-weight: bold;
        transition: 0.3s;
        display: inline-block;
    }

    .primary { background: var(--yellow); color: var(--black); }
    .secondary { border: 2px solid var(--yellow); color: var(--yellow); background: transparent; }

    /* WIDE BOX STYLING */
    .box-wide {
        margin-top: 40px;
        background: rgba(255, 255, 255, 0.05);
        padding: 25px;
        border-left: 5px solid var(--light-green);
        backdrop-filter: blur(10px);
        width: 100%; /* Makes it use all available space in 'main' */
        box-sizing: border-box;
    }

    .cert-list {
        font-size: 1.2rem;
        letter-spacing: 0.5px;
        line-height: 1.6;
        color: var(--white);
    }

    h2 { color: var(--yellow); margin-top: 0; font-size: 1.5rem; }

    .energy-bar {
        height: 8px;
        background: var(--maroon);
        border-radius: 4px;
        margin-top: 15px;
        width: 100%;
    }

    .fill {
        width: 100%; /* Increased progress to show "International" reach */
        height: 100%;
        background: var(--light-green);
        border-radius: 4px;
    }

    /* Partner Logos */
    #partners { margin-bottom: 30px; }
    .partners-label { font-size: 1.2rem; color: var(--yellow); font-weight: bold; text-transform: uppercase; }
    .logo-grid { display: flex; gap: 20px; align-items: center; flex-wrap: wrap; }
    .logo-grid img { height: 50px; width: auto; filter: brightness(0.9); }

    .membership-section { display: flex; flex-direction: column; align-items: flex-start; gap: 10px; width: 100%; }
    .membership-info { background: var(--yellow); color: var(--black); padding: 8px 16px; border-radius: 4px; text-decoration: none; font-weight: bold; display: flex; align-items: center; gap: 8px; }

    /* MOBILE FIXES */
    @media (max-width: 768px) {
        #container { padding: 40px 20px; justify-content: center; }
        #hero { text-align: center; }
        h1 { font-size: 2.2rem; }
        .logo-grid { justify-content: center; }
        #links, .membership-section { align-items: center; }
        .box-wide { border-left: none; border-top: 5px solid var(--light-green); text-align: center; }
        .button { width: 100%; box-sizing: border-box; }
    }
</style>