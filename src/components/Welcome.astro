---
// Importing your certification partner logos
import rtiLogo from '../assets/rti.png'
import krLogo from '../assets/kr.png';
import sbasLogo from '../assets/sbas.png';
import banner from '../assets/banner.png';
import membershipForm from '../assets/2026MembershipDrive.png';

const themeColor = "#FEDF0A";
---

<div id="container">
	<div id="background-glow"></div>
	
	<main>
		<section id="hero">
			<!-- New logo section moved here -->
			<div id="partners">
				<p class="partners-label">Authorized Examination Center for HVAC-R in Kenya</p>
				<div class="logo-grid">
					<img src={rtiLogo.src} alt="RTI Certification" />
					<img src={sbasLogo.src} alt="SBAS Certification" />
					<img src={krLogo.src} alt="KR Certification" />
				</div>
			</div>

			<h1>Smart <span class="hvac">HVAC-R</span> & Building Automation</h1>
			
			<div id="links">
				<a class="button primary" href={banner.src} download="RTI-HVACR-Brochure.png">RTI SMART HVACR PLANT</a>
				<div class="membership-section">
					<a class="button secondary" href="https://www.kenyasmartbuildingsco.org/" target="_blank">Kenya Smart Buildings Society</a>
					<a class="membership-info" href={membershipForm.src} download="2026-Membership-Drive.png">
						<span class="info-icon">ℹ️</span>
						<span class="info-text">Become a Member today!</span>
					</a>
				</div>
			</div>
		</section>
	</main>

	<div id="info-card" class="box">
		<h2>International HVAC-R certifications exam centre for;</h2>
		<p>TVET CDACC, NITA, ESCO group, Johnson's Controls, BACnet Institute</p>
		<div class="energy-bar">
			<div class="fill"></div>
		</div>
	</div>
</div>

<style>
	/* Applying your palette */
	:root {
		--yellow: #FEDF0A;
		--maroon: #852330;
		--orange: #FD561F;
		--blue: #0D0ADF;
		--black: #020200;
		--white: #ffffff;
		--light-green: #74AC2F;
		--dark-green: #073C16;
	}

	body {
		background-color: var(--maroon);
		color: white;
		margin: 0;
		font-family: sans-serif;
		overflow: hidden;
	}

	#background-glow {
		position: fixed;
		top: 0; left: 0; width: 100%; height: 100%;
		background: radial-gradient(circle at top right, var(--dark-green), transparent),
		            radial-gradient(circle at bottom left, var(--maroon), transparent);
		z-index: -1;
		opacity: 0.4;
	}

	#container {
		display: flex;
		height: 100vh;
		align-items: center;
		justify-content: flex-start;
		padding: 0 0 0 80px;
	}

	main {
		width: 100%;
		max-width: 800px;
	}

	#hero {
		text-align: left;
	}

	.status-badge {
		background: var(--dark-green);
		color: var(--light-green);
		padding: 4px 12px;
		border-radius: 20px;
		display: inline-block;
		font-weight: bold;
		font-size: 12px;
		margin-bottom: 1rem;
		border: 1px solid var(--light-green);
	}

	h1 {
		font-size: 3.5rem;
		color: white;
		margin: 0;
		margin-left: 0;
		text-align: left;
	}

	.hvac {
		color: var(--white);
		text-shadow: 2px 2px var(--blue);
	}

	.subtitle {
		font-size: 1.2rem;
		max-width: 500px;
		color: var(--white);
	}

	#links {
		display: flex;
		gap: 20px;
		margin-top: 30px;
		margin-left: 0;
		justify-content: flex-start;
		align-items: flex-start;
	}

	.button {
		padding: 12px 24px;
		text-decoration: none;
		border-radius: 4px;
		font-weight: bold;
		transition: 0.3s;
	}

	.primary {
		background: var(--yellow);
		color: var(--black);
	}

	.secondary {
		border: 2px solid var(--yellow);
		color: var(--yellow);
		background: transparent;
	}

	.button:hover {
		transform: translateY(-3px);
		box-shadow: 0 5px 15px rgba(0,0,0,0.3);
	}

	.box {
		position: absolute;
		bottom: 5px;
		right: 40px;
		background: rgba(255, 255, 255, 0.05);
		padding: 20px;
		border-left: 5px solid var(--light-green);
		backdrop-filter: blur(10px);
		max-width: 250px;
	}

	h2 { 
		color: var(--yellow); 
		margin-top: 0; 
	}

	.energy-bar {
		height: 8px;
		background: var(--maroon);
		border-radius: 4px;
		margin-top: 10px;
	}

	.fill {
		width: 75%;
		height: 100%;
		background: var(--light-green);
		border-radius: 4px;
	}

	#partners {
		margin-top: 0;
		margin-bottom: 30px;
		text-align: left;
		margin-left: 0;
	}

	.partners-label {
		font-size: 2.0rem;
		color: var(--yellow);
		font-weight: bold;
		margin-bottom: 15px;
		text-transform: uppercase;
		text-align: left;
	}

	.logo-grid {
		display: flex;
		gap: 30px;
		align-items: center;
		justify-content: flex-start;
	}

	.logo-grid img {
		height: 60px;
		width: auto;
		filter: brightness(0.9);
		transition: 0.3s;
	}

	.logo-grid img:hover {
		filter: brightness(1.2);
		transform: scale(1.05);
	}

	.membership-section {
		display: flex;
		flex-direction: column;
		align-items: flex-start;
		gap: 10px;
	}

	.membership-info {
		background: var(--yellow);
		color: var(--black);
		padding: 8px 16px;
		border-radius: 4px;
		text-decoration: none;
		font-size: 0.9rem;
		font-weight: bold;
		display: flex;
		align-items: center;
		gap: 8px;
		transition: 0.3s;
		white-space: nowrap;
	}

	.membership-info:hover {
		transform: translateY(-3px);
		box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
	}

	.info-icon {
		font-size: 1.1rem;
	}

	.info-text {
		font-size: 0.85rem;
	}
</style>
